extends layout 

block content 

    h1 #{title}: #{author.name}

    if author_songs.length 

        p #[strong Delete the following songs before attempting to delete this author.]
            h2 Songs 
            dl 
                each song in author_songs 
                    dt 
                        a(href=song.url) #{song.tile}
    else 
        p Do you really want to delete this Author?

        form(method='POST')
            div(class='form-container')
                input#authorid(type='hidden' name='authorid' value=author._id)
            button(type='submit') Delete