extends layout 

block content 
    div(class='author-detail-container')
        h1 Author: #{author.name}
        p #[strong Date of Birth:] #{author.date_of_birth_formatted}

        h2 Featured: #{author.featured}

            h3 Songs 

            if author_songs.length 
                p 
                    each song in author_songs 
                        p
                            a(href=song.url) #{song.title}

            else 
                p This author has no songs.
        p 
            a(href=author.url+'/delete') Delete author